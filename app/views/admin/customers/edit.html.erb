


<%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>


<div class="container">

  <div class="row form-group">
    <div class="col-sm-2">名前</div>

    <div class="col-sm-5">
      <%= f.label :（姓） %>
      <%= f.text_field :last_name, autofocus: true %>
    </div>

    <div class="col-sm-5">
      <%= f.label :（名） %>
      <%= f.text_field :first_name, autofocus: true %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-2">フリガナ</div>

    <div class="col-sm-5">
      <%= f.label :（セイ） %>
      <%= f.text_field :last_name_kana, autofocus: true %>
    </div>

    <div class="col-sm-5">
      <%= f.label :（メイ） %>
      <%= f.text_field :first_name_kana, autofocus: true %>
    </div>
  </div>


  <div class="row form-group">
    <div class="col-sm-2">メールアドレス</div>

    <div class="col-sm-5">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-2">郵便番号(ハイフンなし)</div>

    <div class="col-sm-5">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "000000" %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-2">住所</div>

    <div class="col-sm-10">
      <%= f.text_field :address, autofocus: true %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-2">電話番号(ハイフンなし)</div>

    <div class="col-sm-5">
      <%= f.text_field :telephone_number, autofocus: true %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-2">会員ステータス</div>

    <div class="col-sm-5">
      <%= f.radio_button :is_deleted, false %>
      <%= f.label :is_deleted, '有効', value: false %>
    </div>
    <div class="col-sm-5">
      <%= f.radio_button :is_deleted, true %>
      <%= f.label :is_deleted, '無効', value: true %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-5">
    <%= f.submit "変更を保存" %>
    </div>
  </div>

</div>

<% end %>

