


<div class="container">
   <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
  <div class="row">


　　　<div class="col-sm-5">
　　　<table class="table-bordered">


  <tr><td>名前</td><td><%= @customer.last_name %>  <%= @customer.first_name %></td></tr>
  <tr><td>カナ</td><td><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></td></tr>
  <tr><td>郵便番号</td><td><%= @customer.postal_code %></td></tr>
  <tr><td>住所</td><td><%= @customer.address %></td></tr>
  <tr><td>電話番号</td><td><%= @customer.telephone_number %></td></tr>
  <tr><td>メールアドレス</td><td><%= @customer.email %></td></tr>

</table>
  </div>
　　　<div class="col-sm-5">
      <%= link_to edit_admin_customer_path, class:"nav-link btn btn-outline-secondary" do %>
      編集する
      <% end %>
      </div>
  </div>
</div>
