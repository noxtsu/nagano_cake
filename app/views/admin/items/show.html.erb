<h3 class="text-black-50">商品詳細</h3>

<div slass="container">
  <div class="row">
    <div class="col-sm-3 offset-sm-1">
      <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg' %>
    </div>

    <div class="col-sm-2">
      <p>商品名</p>
      <p>商品説明</p>
      <p>ジャンル</p>
      <p>税込価格<br>
      （税抜価格）</p>
        <%= link_to edit_admin_item_path(@item.id), class:"nav-link btn btn-outline-secondary" do %>
        編集する
        <% end %>
    </div>
      <div class="col-sm-6">
        <p><%= @item.name %></p>
        <p><%= @item.introduction %></p>
        <p><%= @item.genre.name %></p>
        <p><%= (@item.price * 1.1).floor %>(<%= @item.price %>)円</p>



      </div>
    </div>
  </div>