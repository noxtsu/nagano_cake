<h3 class="text-black-50">ジャンル一覧・追加</h3>

<div slass="container">
  <div class="row">
    <div class="col-sm-auto">
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
      <h4>ジャンル名</h4>
      <%= f.text_field :name %>
      <%= f.submit '新規登録' %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-5">
      <table class="table">

        <th>ジャンル</th>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to edit_admin_genre_path(genre.id), class:"nav-link btn btn-outline-secondary" do %>
          　　編集する
          　　<% end %>
          </td>
          </tr>
          <% end %>
      </table>
    </div>
  </div>

  </div>
</div>
