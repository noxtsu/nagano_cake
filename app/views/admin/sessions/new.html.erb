<div slass="container">
  <div class="row">

<div class="col-sm-3">
<h2>管理者ログイン</h2>
</div>
</div>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
  <div class="col-sm-3">
    <%= f.label :メールアドレス %>
  </div>
    <div class="col-sm-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <%= f.label :バスワード %>
    </div>
    <div class="col-sm-3">
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
