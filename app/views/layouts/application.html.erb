<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="border-bottom">
      <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand p-3" href="/"> LOGO </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">

          <% if admin_signed_in? %>
          <li>
            <%= link_to admin_items_path, class:"nav-link btn btn-outline-secondary" do %>
              商品一覧
            <% end %>
          </li>

           <li>
            <%= link_to about_path, class:"nav-link btn btn-outline-secondary" do %>
              会員一覧
            <% end %>
          </li>

          <li>
            <%= link_to admin_path, class:"nav-link btn btn-outline-secondary" do %>
              注文履歴一覧
            <% end %>
          </li>

          <li>
            <%= link_to  admin_genres_path, class:"nav-link btn btn-outline-secondary" do %>
              ジャンル一覧
            <% end %>
          </li>

          <li>
            <%= link_to destroy_admin_session_path, method: :delete, class:"nav-link btn btn-outline-secondary" do %>
              ログアウト
            <% end %>
          </li>


          <% elsif customer_signed_in? %>
          <li>
            <%= link_to mypage_path, class:"nav-link btn btn-outline-secondary" do %>
              マイページ
            <% end %>
          </li>

          <li>
            <%= link_to about_path, class:"nav-link btn btn-outline-secondary" do %>
              商品一覧
            <% end %>
          </li>

          <li>
            <%= link_to about_path, class:"nav-link btn btn-outline-secondary" do %>
              カート
            <% end %>
          </li>

          <li>
            <%= link_to destroy_customer_session_path, method: :delete, class:"nav-link btn btn-outline-secondary" do %>
              ログアウト
            <% end %>
          </li>

　        <% else %>

          <li>
            <%= link_to about_path, class:"nav-link btn btn-outline-secondary" do %>
              About
            <% end %>
          </li>

          <li>
            <%= link_to about_path, class:"nav-link btn btn-outline-secondary" do %>
              商品一覧
            <% end %>
          </li>

          <li>
            <%= link_to new_customer_registration_path, class:"nav-link btn btn-outline-secondary" do %>
              新規登録
            <% end %>
          </li>

          <li>
            <%= link_to new_customer_session_path, class:"nav-link btn btn-outline-secondary" do %>
              ログイン
            <% end %>
          </li>

          <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
