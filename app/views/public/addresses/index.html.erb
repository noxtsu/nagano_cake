<h3 class="text-black-50">配送先登録/一覧</h3>

<div class="container">
  <%= form_with model: @address, url: addresses_path, local: true do |f| %>
  <div class="row">
    <div class="col-sm-7">
      <%= f.label :郵便番号（ハイフン無し） %>
      <%= f.text_field :postal_code, autofocus: true %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-7">
      <%= f.label :住所 %>
      <%= f.text_field :address, autofocus: true %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-7">
      <%= f.label :宛名 %>
      <%= f.text_field :name, autofocus: true %>
    </div>
  </div>
  <div class="col-sm-3">
    <%= f.submit '新規登録' %>
  </div>

    <% end %>

    <div class="col-sm-7">
      <table class="table">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
          <th></th>
        </tr>
       <% @addresses.each do |addresses| %>
        <tr>
          <td><%= addresses.postal_code %></td>
          <td><%= addresses.address %></td>
          <td><%= addresses.name %></td>
          <td>
            <%= link_to edit_address_path(addresses.id), class:"nav-link btn btn-outline-secondary" do %>
            編集する
            <% end %>
          </td>
          <td>
            <%= link_to destroy_address_path(addresses.id), method: :delete, class:"nav-link btn btn-outline-danger" do %>
            削除する
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
</div>