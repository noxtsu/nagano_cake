<h3 class="text-black-50">商品一覧</h3>

<div slass="container">
  <div class="row">

    <div class="col-sm-2 offset-sm-1 sidebar">
      <table class="table border">
        <tr>
          <th>ジャンル検索</th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
        </tr>
        <% end %>
      </table>
    </div>


    <% @items.each do |items| %>
    <div class="col-sm-auto">
      <table class="table">
        <tr><td><%= link_to item_path(items.id) do %>
          <%= attachment_image_tag items, :image, format: 'jpeg', size: "100x100" %>
          <% end %></td></tr>
        <tr><td><%= items.name %></td></tr>
        <tr><td><%= (items.price * 1.1).floor %></td></tr>
        <td></td>
      </table>
    </div>
    <% end %>

  </div>
</div>