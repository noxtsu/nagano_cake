<h3 class="text-black-50">注文履歴一覧</h3>

<div class="container">
  <div class="row"></div>

    <div class="col-sm-12">
      <table class="table">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>注文詳細</th>
        </tr>
       <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %></td>
          <td><% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %><br>
            <% end %></td>
          <td><%= order.total_payment %></td>
          <td>
            <%= link_to order_path(order.id), class:"nav-link btn btn-outline-secondary" do %>
            表示する
            <% end %></td>
        </tr>
        <% end %>
      </table>
</div>