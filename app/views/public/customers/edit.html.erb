
<h3 class="text-black-50"> 会員情報編集</h3>


<%= form_with model: @customer, url: customers_path, local: true do |f| %>


<div class="container">

  <div class="row form-group">
    <div class="col-sm-2">名前</div>

    <div class="col-sm-5">
      <%= f.label :（姓） %>
      <%= f.text_field :last_name, autofocus: true %>
    </div>

    <div class="col-sm-5">
      <%= f.label :（名） %>
      <%= f.text_field :first_name, autofocus: true %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-2">フリガナ</div>

    <div class="col-sm-5">
      <%= f.label :（セイ） %>
      <%= f.text_field :last_name_kana, autofocus: true %>
    </div>

    <div class="col-sm-5">
      <%= f.label :（メイ） %>
      <%= f.text_field :first_name_kana, autofocus: true %>
    </div>
  </div>


  <div class="row form-group">
    <div class="col-sm-2">メールアドレス</div>

    <div class="col-sm-5">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-2">郵便番号(ハイフンなし)</div>

    <div class="col-sm-5">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "000000" %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-2">住所</div>

    <div class="col-sm-10">
      <%= f.text_field :address, autofocus: true %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-2">電話番号(ハイフンなし)</div>

    <div class="col-sm-5">
      <%= f.text_field :telephone_number, autofocus: true %>
    </div>
  </div>


  <div class="row form-group">
    <div class="col-sm-5">
    <%= f.submit "編集内容を保存" %>

    <%= link_to customers_unsubscribe_path, class:"nav-link btn btn-outline-danger" do %>
    退会する
    <% end %>
    </div>
  </div>

</div>

<% end %>










